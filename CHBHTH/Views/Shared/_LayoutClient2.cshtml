
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/styles.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
    <body>
        @{ var u = Session["use"] as CHBHTH.Models.TaiKhoan; }
        <nav class="navbar navbar-expand-lg navbar-light text-bg-light">
            <div class="container px-4 px-lg-5">
                @Html.ActionLink("GYMGEAR", "Index", "Home", new { area = "" }, new { @class = "navbar-brand " , style = "color: red; font-weight: bold; text-decoration: underline;" })       
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                        <li class="nav-item"> @Html.ActionLink("Home Page", "Index", "Home", new { area = "" }, new { @class = "nav-link activ" })</li>
                        <li class="nav-item"> @Html.ActionLink("About Us", "About", "Home", new { area = "" }, new { @class = "nav-link activ" })</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Product Portfolio </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li> @Html.ActionLink("Product Portfolio", "index", "sanpham", new { area = "" }, new { @class = "dropdown-item" }) </li>

                                <li><hr class="dropdown-divider" /></li>
                                <li> @Html.Action("danhmucpartial", "danhmuc", new { @class = "dropdown-item" }) </li>
                            </ul>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <button class="btn btn-outline-secondary" type="submit">
                            @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                        </button>
                        <ul class="navbar-nav ms-auto ">
                            @{ if (u != null)
                                {
                                    <li class="nav-item mx-0 mx-lg-1">
                                        <a style="color:black" href="@Url.Action("Profile", "User", new { id = u.MaNguoiDung  })"> Hi: @u.Email</a>
                                        <br />
                                        <a style="color:red" href="/User/DangXuat"> Log out</a>
                                    </li>
                                }
                                else
                                {
                                    <td class="nav-item mx-0 mx-lg-1"> @Html.ActionLink("Login", "Dangnhap", "User", new { area = "" }, new { @class = "nav-link py-3 px-0 px-lg-3 rounded" }) </td>

                                } }
                        </ul>
                    </form>
                </div>
            </div>
        </nav>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

    <footer class="text-bg-success" style="padding-left:50px; background-color: blue;">
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <h3>GYMGEAR Introduction</h3>
                <span>Company Introduction</span>
                <br />
                <span>Shop System</span>
                <br />
                <span>Employment Information</span>
            </div>
            <div class="col-md-4 col-sm-6">
                <h3>Customer Support</h3>
                <span>Payment Guide</span>
                <br />
                <span>Customer Policy</span>
                <br />
                <span>Return and Refund Policy</span>
            </div>
            <div class="col-md-4 col-sm-6">
                <h3>Let Us Help You</h3>
                <span>Blogs</span>
                <br />
                <span>Contact: 0123456789</span>
                <br />
                <span>Email: Gymgear@gmail.com</span>
            </div>
        </div>
        <hr />
        <div class="copyright py-4 text-center text-white">
            <div class="container"><small>Copyright &copy; 2024 GYMGEAR. All rights reserved. </small></div>
        </div>
    </footer>
    <script src="~/Content/js/scripts.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/Content/ckeditor/ckfinder/ckfinder.js"></script>

    <script src="~/Content/ckeditor/ckeditor.js"></script>

    <script src="~/Content/ckeditor/adapters/jquery.js"></script>


    <script>
    </script>

    @RenderSection("DoanJS", false)
</html>
