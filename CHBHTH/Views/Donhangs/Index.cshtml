@model IEnumerable<CHBHTH.Models.DonHang>

@{ ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient2.cshtml"; }

<center>
    <h2>List Order</h2>


    <table class="table">
        <tr>
            <th>
                Name
            </th>
            <th>
                Date Order
            </th>
            <th>
                Status
            </th>
            <th>
                Pay
            </th>
            <th>
                Total Amout
            </th>
            <th>
                Delivery Address
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @{ if (@item.TinhTrang == 0)
                        {
                            <h5 style="color:red">Not yet confirmed </h5>
                        }
                        else if (@item.TinhTrang == 1)
                        {
                            <h5 style="color:green">Confirmed </h5>
                        }
                        else
                        {
                            <h5 style="color:orangered">Not yet confirmed </h5>
                        }
                    }
                </td>
                <td>
                    @{ if (@item.ThanhToan == 1)
                        {
                            <div style="color:red">Payment in Cash</div>
                        }
                        else if (@item.ThanhToan == 2)
                        {
                            <div style="color:brown">Payment by Bank Transfer</div> }
                    }
                </td>
                <td>
                    @String.Format("{0:0,0}", item.TongTien) VNĐ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChiNhanHang)
                </td>
                <td>
                    <button class="btn btn-info">
                        @Html.ActionLink("Detail", "Details", new { id = item.MaDon }, new { @style = "color:white;" })
                    </button>

                </td>
            </tr>
        }

    </table>
</center>